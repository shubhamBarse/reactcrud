server {
    listen 80;
    server_name local.reactcrud.com;

    root /var/www/html/reactcrud;
    index index.php index.html;

    location / {
        try_files $uri /index.php;
    }

    location ~ \.php$ {
        include snippets/fastcgi-php.conf;
        fastcgi_pass unix:/var/run/php/php8.2-fpm.sock;  # Update based on your PHP version
        fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include fastcgi_params;
    }

    # Enable CORS (optional, only if needed)
    add_header Access-Control-Allow-Origin *;
    add_header Access-Control-Allow-Methods "GET, POST, OPTIONS";
    add_header Access-Control-Allow-Headers "Origin, Content-Type, Accept";

    access_log /var/log/nginx/reactcrud.access.log;
    error_log /var/log/nginx/reactcrud.error.log;
}
